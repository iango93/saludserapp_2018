<p id="notice"><%= notice %></p>

<h1>Incidents</h1>

<table>
  <thead>
    <tr>
      <th>Num incident</th>
      <th>Type incident</th>
      <th>Affair</th>
      <th>Description</th>
      <th>Customer</th>
      <th>Company</th>
      <th>Headquarter</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <td><%= incident.num_incident %></td>
        <td><%= incident.type_incident %></td>
        <td><%= incident.affair %></td>
        <td><%= incident.description %></td>
        <td><%= incident.customer %></td>
        <td><%= incident.company %></td>
        <td><%= incident.headquarter %></td>
        <td><%= incident.state %></td>
        <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

