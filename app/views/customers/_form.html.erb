<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      
      <%= form_with(model: customer, local: true) do |form| %>
        <% if customer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

            <ul>
            <% customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :date_admission, "Fecha de ingreso" %>
          <%= form.date_select :date_admission, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :first_name, "Primer Nombre".camelize%>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :second_name, "segundo nombre".camelize %>
          <%= form.text_field :second_name, class: "form-control" %>
        </div>

        <div class="fieldform-group">
          <%= form.label :lastname, "apellido".camelize %>
          <%= form.text_field :lastname, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :second_surname, "segundo apellido".capitalize %>
          <%= form.text_field :second_surname, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :civil_status, "estado civil".capitalize %>
          <%= form.text_field :civil_status, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :gender %>
          <%= form.text_field :gender, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :pregnancy %>
          <%= form.check_box :pregnancy, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :gestation_weeks %>
          <%= form.text_field :gestation_weeks, class: "form-control" %>
