        </div>

        <div class="form-group">
          <%= form.label :address_id %>
          <%= form.text_field :address_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email_id %>
          <%= form.text_field :email_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :staff_id %>
          <%= form.text_field :staff_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :birthdate %>
          <%= form.date_select :birthdate, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :advertising_medium %>
          <%= form.text_field :advertising_medium, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :account_id %>
          <%= form.text_field :account_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :company_id %>
          <%= form.text_field :company_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :arrival_card_ccf %>
          <%= form.check_box :arrival_card_ccf, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :arrival_card_arl %>
          <%= form.check_box :arrival_card_arl, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :ibc %>
          <%= form.text_field :ibc, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :state_id %>
          <%= form.text_field :state_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :entity_id %>
          <%= form.text_field :entity_id, class: "form-control" %>
        </div>

        <div class="actions">
          <%= form.submit "Crear", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
