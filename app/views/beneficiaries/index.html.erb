<p id="notice"><%= notice %></p>

<h1>Beneficiaries</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>Lastname</th>
      <th>Second surname</th>
      <th>Customer</th>
      <th>Birthday</th>
      <th>Relationship</th>
      <th>Identification</th>
      <th>Gender</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.first_name %></td>
        <td><%= beneficiary.second_name %></td>
        <td><%= beneficiary.lastname %></td>
        <td><%= beneficiary.second_surname %></td>
        <td><%= beneficiary.customer %></td>
        <td><%= beneficiary.birthday %></td>
        <td><%= beneficiary.relationship %></td>
        <td><%= beneficiary.identification %></td>
        <td><%= beneficiary.gender %></td>
        <td><%= beneficiary.state %></td>
        <td><%= link_to 'Show', beneficiary %></td>
        <td><%= link_to 'Edit', edit_beneficiary_path(beneficiary) %></td>
        <td><%= link_to 'Destroy', beneficiary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

