<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>Lastname</th>
      <th>Second suname</th>
      <th>Current work</th>
      <th>Email</th>
      <th>Advertising medium</th>
      <th>Address</th>
      <th>Active</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.first_name %></td>
        <td><%= lead.second_name %></td>
        <td><%= lead.lastname %></td>
        <td><%= lead.second_suname %></td>
        <td><%= lead.current_work %></td>
        <td><%= lead.email %></td>
        <td><%= lead.advertising_medium %></td>
        <td><%= lead.address %></td>
        <td><%= lead.active %></td>
        <td><%= lead.customer_id %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

