<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Legal representative</th>
      <th>Cc legal representative</th>
      <th>Creation date</th>
      <th>Economic activity</th>
      <th>Code economic activity</th>
      <th>Email</th>
      <th>Identification</th>
      <th>Address</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.legal_representative %></td>
        <td><%= company.cc_legal_representative %></td>
        <td><%= company.creation_date %></td>
        <td><%= company.economic_activity %></td>
        <td><%= company.code_economic_activity %></td>
        <td><%= company.email %></td>
        <td><%= company.identification %></td>
        <td><%= company.address %></td>
        <td><%= company.state %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

